{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "dom",
    ],
    "baseUrl": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2015",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "watch": false,
    "declaration": true,
    "sourceMap": false,
    "noUnusedLocals": false,
    "incremental": false
  },
  "include": [
    "./src/index.ts",
    "./experiment",
    "./examples"
  ],
  "exclude": [
    "./node_modules",
  ]
}